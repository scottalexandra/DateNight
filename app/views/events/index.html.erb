<div class="conatiner-container">

<%= render partial: "date_night" %>

  <div class="events-list container">
    <div class="panel panel-default upcoming-dates">
      <div class="panel-body">
        <h3>Explore All The Happenings...</h3>
        <% @events.each do |event| %>
          <div class="event-info container">
            <div class="event-image col-md-4">
              <%= image_tag(event.image.url, class: "event-image") %>
            </div>
            <div class="event-title col-md-8">
              <%= link_to "#{event.title}", event.url %>
            </div><br>
            <div class="event-description col-md-8">
              <%= event.description %>
            </div>
            <div class="event-address col-md-8">
              <%= event.address %>
            </div>
            <div class="event-city-state col-md-8">
              <%= event.city %> , <%= event.state %>  <%= event.postal_code %>
            </div>
            <div class="event-time col-md-8">
              <%= event.time %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
